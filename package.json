{
  "name": "aottg-custom-logic",
  "displayName": "Aottg Custom Logic",
  "description": "Syntax highlighting for Aottg CustomLogic",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ACL configuration",
      "properties": {
        "aclLanguageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "aclLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "commands": [
      {
        "command": "experiment.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "acl",
        "aliases": [
          "CustomLogic",
          "acl"
        ],
        "extensions": [
          ".acl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "acl",
        "scopeName": "source.acl",
        "path": "./syntaxes/acl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "acl",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ikr2202/acl-vscode"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/vscode": "1.78.0",
    "@types/node": "16.x",
    "typescript": "^5.0.4"
  }
}
